<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="SelectorCard">
        <item name="android:background">@drawable/rounded_selector</item>
        <item name="android:layout_width">@dimen/selector_width_height</item>
        <item name="android:layout_height">@dimen/selector_width_height</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/ll_notification"
        android:orientation="vertical"
        android:gravity="center"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/card_corner_radius_small"
        android:layout_width="@dimen/selector_width_height_small"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="@dimen/selector_width_height_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_icon"
                android:src="@drawable/ic_notifications_active"
                android:layout_gravity="center"
                android:layout_width="@dimen/image_dimen_card_small"
                android:layout_height="@dimen/image_dimen_card_small"/>

            <TextView
                android:id="@+id/tv_name"
                android:gravity="center"
                android:text="@string/notifications"
                android:layout_width="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>